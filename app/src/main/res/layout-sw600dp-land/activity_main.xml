<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/big6Fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="sk.upjs.ics.android.big6.Big6Fragment"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/trainingFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="sk.upjs.ics.android.big6.TrainingFragment"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/trainingHistoryFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="sk.upjs.ics.android.big6.TrainingHistoryFragment"
        android:layout_weight="1"/>

</LinearLayout>
